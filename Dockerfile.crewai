    from crewai import Agent, Task, Crew\n\
    from langchain_ollama import ChatOllama\n\
    print("âœ… CrewAI imports successful")\n\
except Exception as e:\n\
    print(f"âŒ Import failed: {e}")\n\
    sys.exit(1)\n\
\n\
# Test Ollama connection\n\
try:\n\
    llm = ChatOllama(\n\
        model="llama3.1:8b",\n\
